@using Microsoft.AspNetCore.Http
@model dynamic

@{
    ViewData["Title"] = "Profile";
    var imageSrc = !string.IsNullOrEmpty(ViewBag.Image) ? Url.Content($"~/img/{ViewBag.Image}") : Url.Content("~/img/default.png");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MATEK EĞİTİM</title>
    <link rel="stylesheet" href="~/css/kayit-giris.css">
    <link rel="stylesheet" href="~/css/IlkSayfa.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://kit.fontawesome.com/d755b7edb1.js" crossorigin="anonymous"></script>
    
</head>
<body>
    <header class="header">
        <a href="#" class="logo"><i class='bx bx-home-heart' onclick="goToPage('#Anasayfa')"></i><span>MATEK</span></a>
        <h1>User Edit</h1>
        <div class="social-media">
            <a href="#" style="--i:1;"><i class='bx bxl-twitter'></i></a>
            <a href="#" style="--i:2;"><i class='bx bxl-instagram-alt'></i></a>
            <a href="#" style="--i:3;"><i class='bx bxs-envelope'></i></a>
        </div>
    </header>
    <section id="Anasayfa" class="home">
        <form action="Profile" method="post" enctype="multipart/form-data" class="input-group">
            <input type="hidden" name="teacherid" value="@ViewBag.TeacherId">
            <div class="row">
                <div class="col-9">
                    <div class="bg-white p-4">
                        <div asp-validation-summary="ModelOnly" style="color: red;"></div>
                        <div class="mb-3">
                            <label for="TeacherName"></label>
                            <input name="teacherName" class="input-field" value="@ViewBag.TeacherName" placeholder="Enter Teacher Name" required>
                        </div>
                        <div class="mb-3">
                            <label for="Name"></label>
                            <input name="name" class="input-field" value="@ViewBag.Name" placeholder="Enter Name" required>
                        </div>
                        <div class="mb-3">
                            <label for="Email"></label>
                            <input name="email" class="input-field" value="@ViewBag.Email" placeholder="Enter Email" required>
                        </div>
                        <div class="mb-3">
                            <label for="Password"></label>
                            <input name="password" class="input-field" value="@ViewBag.Password" placeholder="Enter Password" required>
                        </div>
                        <div>
                            <label for="image"></label>
                            <input type="file" id="image" name="imageFile" />
                            <img src="@imageSrc"style="width: 150px; height: auto;" />
                        </div>
                        <button type="submit" class="submit-btn">Kaydet</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        
        @section Scripts {
            <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/7.2.1/tinymce.min.js" integrity="sha512-zmlLhIesl+uwwzjoUz/izUsSjAMVb/7fH2ffCbJvYLepAvdvAq1T6ev9edZR8jwRKfM0OTaUyFVO1D7wAwXCEw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
            <script>
                tinymce.init({
                    selector: '#Content'
                })
            </script>
            }
        
    </section>

    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script src="~/js/script.js"></script>

    <script>
        function goToLoginPage() {
            window.location.href = '/User/Login'; // Yönlendirilecek sayfanın adını buraya ekleyin
        }
        function goToIlkSayfaPage(page) {
            window.location.href = page;
        }

    </script>
    
    
</body>

</html>